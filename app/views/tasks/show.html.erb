<div class="m-3">
<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed == true %>
  <input class="form-check-input" type="checkbox" checked>
    <label class="form-check-label" for="flexCheckChecked">
    This task is completed
  </label>
<% else %>
  <input class="form-check-input" type="checkbox">
      <label class="form-check-label" for="flexCheckDefault">
    This task is not completed yet
  </label>
<% end %>
<div class="row row-cols-3 g-2 mt-3">
<br><%= link_to "Back to the list", tasks_path, class:"btn btn-primary" %>
<br><%= link_to "Edit Task", edit_task_path, class:"btn btn-outline-primary" %>
<br><%= link_to "Delete Task", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "T'es sure ?"}, class:"btn btn-danger" %>
</div>
</div>
